{##
 # Print the file-type icon for a file.
 #
 # @param string type      the lowercase type of the file (dir | file)
 # @param string extension the lowercase extension of the file
 #}
{% macro getIcon(type, extension) %}
  {# First, check the type of the file. If the file actually is a directory,
   # return the generic folder icon. #}
  {% if type == 'dir' %}
    <i class="fa fa-folder" aria-hidden="true"></i>

  {# If the icon should be generated for a file, check the file extensions for
   # available icons. #}
  {% elseif extension in ['txt'] %}
    <i class="fa fa-file-text-o" aria-hidden="true"></i>

  {% elseif extension == 'pdf' %}
    <i class="fa fa-file-pdf-o" aria-hidden="true"></i>

  {% elseif extension in ['bmp', 'gif', 'jpeg', 'jpg', 'png', 'tif', 'tiff'] %}
    <i class="fa fa-file-image-o" aria-hidden="true"></i>

  {% elseif extension in ['aac', 'aiff', 'm4a', 'mp3', 'ogg', 'opus', 'wav'] %}
    <i class="fa fa-file-audio-o" aria-hidden="true"></i>

  {% elseif extension in ['amv', 'avi', 'flv', 'm4v', 'mkv', 'mov', 'mp4',
                          'm4p', 'mpeg', 'mpg', 'ogv', 'vob', 'webm', 'wmv'] %}
    <i class="fa fa-file-video-o" aria-hidden="true"></i>

  {% elseif extension in ['7z', 'a', 'apk', 'ar', 'bin', 'bz2', 'cab', 'dmg',
                          'gz', 'iso', 'jar', 'lz', 'lzma', 'lzo', 'pak',
                          'partimg', 'rar', 's7z', 'tar', 'tbz2', 'tgz', 'tlz',
                          'txz', 'xz', 'zip'] %}
    <i class="fa fa-file-archive-o" aria-hidden="true"></i>

  {% elseif extension in ['doc', 'docx', 'odt', 'rtf'] %}
    <i class="fa fa-file-word-o" aria-hidden="true"></i>

  {% elseif extension in ['csv', 'ods', 'xls', 'xlsx'] %}
    <i class="fa fa-file-excel-o" aria-hidden="true"></i>

  {% elseif extension in ['odp', 'ppt', 'pptx'] %}
    <i class="fa fa-file-powerpoint-o" aria-hidden="true"></i>

  {% elseif extension in ['c', 'class', 'cpp', 'cs', 'h', 'hpp', 'hxx', 'java',
                          'py', 'sh', 'swift', 'vb'] %}
    <i class="fa fa-file-code-o" aria-hidden="true"></i>

  {# If there's no matching icon, return the generic file icon instead. #}
  {% else %}
    <i class="fa fa-file-o" aria-hidden="true"></i>
  {% endif %}
{% endmacro %}
