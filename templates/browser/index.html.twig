{% extends "base.html.twig" %}

{% import "browser/_breadcrumbs.html.twig" as crumbs %}
{% import "browser/_file_icons.html.twig" as icons %}


{% block content %}
<div class="container">
  {{ crumbs.print(breadcrumbs) }}

  <div class="row">
    <div class="col">
      <table class="table table-sm table-hover">
        <tbody>
          {% for file in files %}
            <tr>
              <td class="td-fit">
                {{ icons.getIcon(file.type, file.extension|lower) }}
              </td>
              <td class="filename">
                <a href="{{ file.filename|escape('url') }}{% if file.type == 'dir' %}/{% endif %}">
                  {{ file.filename }}
                </a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
